{
  "name": "@ahmedali8/hardhat-ts-starterkit",
  "description": "Starter kit for writing Solidity smart contracts in hardhat environment",
  "version": "0.1.0",
  "author": {
    "name": "Ahmed Ali Bhatti",
    "url": "https://github.com/ahmedali8"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@ethersproject/abi": "^5.6.3",
    "@ethersproject/abstract-signer": "^5.6.2",
    "@ethersproject/address": "^5.6.1",
    "@ethersproject/bignumber": "^5.6.2",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.8",
    "@ethersproject/units": "^5.6.1",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.6.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.3.1",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "chai": "4.3.6",
    "chalk": "^4.1.2",
    "child_process": "^1.0.2",
    "commander": "^9.3.0",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "5.6.8",
    "fs-extra": "^10.1.0",
    "hardhat": "2.9.9",
    "hardhat-contract-sizer": "2.5.1",
    "hardhat-deploy": "^0.11.10",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-docgen": "^1.3.0",
    "hardhat-gas-reporter": "1.0.8",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.0.1",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "ramda": "^0.28.0",
    "shelljs": "^0.8.5",
    "shx": "0.3.4",
    "solhint": "3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "0.7.21",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.3"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "license": "UNLICENSED",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "scripts": {
    "chain": "hardhat node --no-deploy --export-all ./generated/chain.json --network hardhat",
    "clean": "shx rm -rf ./generated/artifacts ./generated/cache ./coverage ./src/types ./coverage.json",
    "clean:generated": "shx rm -rf ./generated",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile && [ ! -d \"./generated/deployments\" ] && mkdir ./generated/deployments",
    "coverage": "yarn typechain && hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "deploy": "hardhat run scripts/deploy.ts --network hardhat",
    "deploy:network": "hardhat run scripts/deploy.ts --network",
    "deploy:hardhat-deploy": "yarn compile && hardhat deploy --export-all ./generated/hardhat_contracts.json",
    "deploy:hh": "yarn deploy:hardhat-deploy --network hardhat",
    "deploy:hh:network": "yarn deploy:hardhat-deploy --network",
    "docgen": "hardhat docgen",
    "fork": "hardhat node --network hardhat --fork https://mainnet.infura.io/v3/460f40a260564ac4a4f4b3fffb032dad",
    "flat:contract": "hardhat flatfile --contract",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "is-ci || husky install",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts,yaml,yml}\"",
    "size": "hardhat size-contracts",
    "test": "hardhat test",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  }
}
